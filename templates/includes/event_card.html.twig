<div class="container">
    <div class="cellphone-container">
        <div class="movie">
            <div class="menu"></div>
            <div class="movie-img"><img src="https://i.ibb.co/FDGqCmM/papers-co-ag74-interstellar-wide-space-film-movie-art-33-iphone6-wallpaper.jpg" alt="poster"> </div>
            <div class="text-movie-cont">
                <div class="mr-grid">
                    <div class="col1">
                        <h1 class="title-event-1">{{ title }}</h1>
                        <ul class="movie-gen">
                            <li>PG-13  /</li>
                            <li>2h 49min  /</li>
                            <li>Adventure, Drama, Sci-Fi,</li>
                        </ul>
                    </div>
                </div>
                <div class="mr-grid summary-row">
                    <div class="col2">
                        <h5 class="summary-event">SUMMARY</h5>
                    </div>
                    <div class="col2">
                        <ul class="movie-likes">
                            <li><i class="fas fa-comments"></i>124</li>
                            <li><i class="fas fa-star"></i>3</li>
                        </ul>
                    </div>
                </div>
                <div class="mr-grid">
                    <div class="col1">
                        <p class="movie-description">{{ summary}} </p>
                    </div>
                </div>
                <div class="mr-grid actors-row">
                    <div class="col1">
                        <p class="movie-actors">Matthew McConaughey, Anne Hathaway, Jessica Chastain</p>
                    </div>
                </div>
                <div class="mr-grid action-row">
                    <div class="col2"><div class="watch-btn"><h3 class="footer-event"><i class="fas fa-play"></i>VER TRAILER</h3></div>
                    </div>
                    <div class="col6 action-btn"><i class="fas fa-save"></i>
                    </div>
                    <div class="col6 action-btn"><i class="fas fa-bookmark"></i>
                    </div>
                    <div class="col6 action-btn"><i class="fas fa-share-alt"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
