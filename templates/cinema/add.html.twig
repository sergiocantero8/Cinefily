{% extends 'base.html.twig' %}

{% block title %}Añadir nuevo cine | Cinefily{% endblock %}

{% block main %}

    <div class="add-event-form">
        <div class="title">
            <h5><i class="fas fa-film"></i>Añadir cine </h5>
        </div>
        {{ form_start(form) }}

        <div class="row">

            <div class="title-event col-12 col-md-4 ">
                {{ form_row(form.name) }}
            </div>

            <div class="type-event col-12 col-md-4">
                {{ form_row(form.location) }}
            </div>

            <div class="col-12 col-md-4">
                {{ form_row(form.tickets_price) }}
            </div>

            <div class="type-event col-12 col-md-2">
                {{ form_row(form.n_rooms) }}
            </div>

            <div class="gender-event col-12 col-md-2">
                {{ form_row(form.n_rows) }}
            </div>

            <div class="description-event col-12 col-md-2">
                {{ form_row(form.n_columns) }}
            </div>


            <div class="submit-event col-12">
                {{ form_row(form.submit) }}
            </div>

        </div>
    </div>
    {{ form_end(form) }}


{% endblock %}
