{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block main %}

    {% for flash_message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ flash_message }}
        </div>
    {% endfor %}

    {% for flash_message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}

    <div class="row">

                <div class="col-md-4 m-5">
                    <div class="card">
                        <img class="card-img-top p-4"
                             src="https://i2.wp.com/noescinetodoloquereluce.com/wp-content/uploads/2021/01/nomadland-poster.jpg?resize=800%2C1185&ssl=1"
                             alt="Card image cap" >
                        <div class="card-body">
                            <p class="card-text text-white font-weight-bold">This is a wider card with supporting text below as a natural lead-in to
                                additional content. This content is a little bit longer.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary">View</button>
                                    <button type="button" class="btn btn-light">Edit</button>
                                </div>
                                <small class="text-muted">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

{% endblock %}
