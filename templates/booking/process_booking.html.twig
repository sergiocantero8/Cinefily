{% extends 'base.html.twig' %}

{% block title %}Pago | Cinefily{% endblock %}


{% block main %}


    <div class="booking-page">

        <div class="row">
            {# Detalles de la sesión: nombre del evento, portada, horario... #}
            <div class="col-12 col-md-2">
                {% include 'booking/includes/session_details.html.twig' %}
            </div>

            <div class="col-12 col-md-8 ">
                <div class="container d-flex justify-content-center m-4">
                    <div class="row">
                        <div class="col-12">
                            {% if n_seats > 1 %}
                                <p class="h6"> Los {{ n_seats }} asientos que has elegido son:</p>
                            {% else %}
                                <p class="h6"> El asiento que has elegido es:</p>
                            {% endif %}
                        </div>
                        <div class="col-12">
                            <ul class="list-group">
                                {% for seat in seats %}
                                    <li class="list-group-item font-weight-bold"> {{ seat }} </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="col-12">
                            {% include 'session/includes/ticket_movie.html.twig' %}
                        </div>

                        <div class="col-12">
                            <a class="btn btn-success mt-3" href="/booking/payment" role="button"><i class="fas fa-shopping-cart pr-2"></i>Comprar</a>
                            <a class="btn btn-danger mt-3" href="/booking/payment" data-toggle="modal" data-target="#cancelModal"><i class="fas fa-window-close pr-2"></i>Cancelar</a>
                        </div>



                    </div>
                </div>

            </div>
        </div>
    </div>



    <div class="modal fade" id="cancelModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Cancelar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ¿Seguro que quieres cancelar el proceso de reserva de las entradas?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Seguir con el proceso</button>
                    <button type="button" class="btn btn-danger">Sí, estoy seguro</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

    {% block custom_body_javascript %}

    {% endblock %}