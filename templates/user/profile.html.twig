{% extends 'base.html.twig' %}

{% block main %}


    <div class="container">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="user-profile">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                {% if user.getPhoto() is not null %}
                                    <div class="avatar">
                                        <img class="profile-photo rounded-circle z-depth-2" alt="Foto de perfil"
                                             src="{{ asset('uploads/images/' ~ user.getPhoto()) }}"
                                             data-holder-rendered="true">
                                    </div>
                                {% else %}
                                    <img src="https://w7.pngwing.com/pngs/867/694/png-transparent-user-profile-default-computer-icons-network-video-recorder-avatar-cartoon-maker-blue-text-logo.png"
                                         alt="Admin"
                                         class="p-1 bg-primary" width="100">
                                {% endif %}
                                <div class="mt-3">
                                    {% if user.getName() is not null %}
                                        <h4>{{ user.getName() }}</h4>
                                    {% else %}
                                        <h4>Desconocido</h4>
                                    {% endif %}
                                    <p class="text-secondary mb-1">Miembro desde el {{ user.getCreatedAt()|date('d/m/y') }}</p>
                                    <p class="text-muted font-size-sm">Granada</p>
                                    <a class="btn btn-outline-primary" href="/user/myTickets"><i class="fas fa-ticket-alt pr-2"></i>Mis entradas</a>
                                </div>
                            </div>
                            <hr class="my-4">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0">
                                        <i class="fas fa-comments fa-lg pr-2"></i>
                                        Comentarios realizados
                                    </h6>
                                    {% if user_comments is defined and user_comments is not null %}
                                        <span class="text-secondary">{{ user_comments }}</span>
                                    {% else %}
                                        <span class="text-secondary">0</span>
                                    {% endif %}
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0">
                                        <i class="fas fa-tags fa-lg pr-2"></i>
                                        Cupones
                                    </h6>
                                    {% if user_coupons is defined and user_coupons is not null %}
                                        <span class="text-secondary">{{ user_coupons }}</span>
                                    {% else %}
                                        <span class="text-secondary">0</span>
                                    {% endif %}
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0">
                                        <i class="fas fa-ticket-alt fa-lg pr-2"></i>
                                        Entradas compradas
                                    </h6>
                                    {% if user_tickets is defined and user_tickets is not null %}
                                        <span class="text-secondary">{{ user_tickets }}</span>
                                    {% else %}
                                        <span class="text-secondary">0</span>
                                    {% endif %}
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="user-profile">
                        <div class="card-body">
                            <div class="row">
                                {{ form_start(form) }}

                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Nombre</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">

                                        {{ form_widget(form.name,{'attr': {'class': 'input_profile_user'}}) }}

                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Apellidos</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_widget(form.surname,{'attr': {'class': 'input_profile_user'}}) }}
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_widget(form.email,{'attr': {'class': 'input_profile_user'}}) }}
                                    </div>
                                </div>


                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Teléfono</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_widget(form.phone_number,{'attr': {'class': 'input_profile_user'}}) }}
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Cambiar foto de perfil</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_widget(form.profile_photo,{'attr': {'class': 'input_profile_user'}}) }}
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Cambiar contraseña</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_widget(form.password,{'attr': {'class': 'input_profile_user'}}) }}
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Privilegios</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_widget(form.privileges,{'attr': {'class': 'input_profile_user'}}) }}
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_row(form.submit) }}
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}

{% block custom_body_javascript %}

    <script>
        // Para mostrar el nombre del archivo seleccionado
        $('#form_profile_photo').change(function () {
            $('.custom-file label[for="form_profile_photo"]').text(this.files[0].name);
        });

    </script>
{% endblock %}