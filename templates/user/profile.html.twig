{% extends 'base.html.twig' %}

{% block main %}


    <div class="container">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    {% include 'user/includes/data_profile.html.twig' with
                        {'link': '/user/myTickets','link_name': 'Mis entradas' , 'icon': 'fas fa-ticket-alt'} %}
                </div>
                <div class="col-lg-8">
                    <div class="user-profile">
                        <div class="card-body">
                            <div class="row">
                                {{ form_start(form) }}

                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Nombre</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">

                                        {{ form_widget(form.name,{'attr': {'class': 'input_profile_user'}}) }}

                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Apellidos</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_widget(form.surname,{'attr': {'class': 'input_profile_user'}}) }}
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_widget(form.email,{'attr': {'class': 'input_profile_user'}}) }}
                                    </div>
                                </div>

                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Teléfono (Opcional)</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_widget(form.phone_number,{'attr': {'class': 'input_profile_user'}}) }}
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Ciudad (Opcional)</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_widget(form.city,{'attr': {'class': 'input_profile_user'}}) }}
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Cambiar foto de perfil</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_widget(form.profile_photo,{'attr': {'class': 'input_profile_user'}}) }}
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Cambiar contraseña</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_widget(form.password,{'attr': {'class': 'input_profile_user'}}) }}
                                    </div>
                                </div>
                                <div class="col-12 mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Privilegios</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_widget(form.privileges,{'attr': {'class': 'input_profile_user'}}) }}
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9 text-secondary">
                                        {{ form_row(form.submit) }}
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}

{% block custom_body_javascript %}

    <script>
        // Para mostrar el nombre del archivo seleccionado
        $('#form_profile_photo').change(function () {
            $('.custom-file label[for="form_profile_photo"]').text(this.files[0].name);
        });

    </script>
{% endblock %}