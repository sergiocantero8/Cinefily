{% extends 'base.html.twig' %}

{% block title %}Cinefily{% endblock %}

{% block main %}

    {% for flash_message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ flash_message }}
        </div>
    {% endfor %}

    {% for flash_message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}

    <div class="container-fluid">

        <h1 class="display-4 mb-5 mt-2">Eventos <i class="fab fa-elementor"></i></h1>
        <div class="h4">Pel√≠culas premiadas <i class="fas fa-award"></i></div>

        <div class="row mt-5">

            {% if films != null and films is not empty %}
                {% for data_film in films %}
                    <div class="card-box col-12 col-md-6 col-xl-4 ">
                        {% if data_film.tmdb_id is defined and data_film.tmdb_id is not null %}
                            {% include 'includes/event_card.html.twig' with {'tmdb_id': data_film.tmdb_id , 'data_film' : data_film} %}
                        {% else %}
                            {% include 'includes/event_card.html.twig' with {'id': data_film.id , 'data_film' : data_film} %}
                        {% endif %}
                    </div>
                {% endfor %}
            {% endif %}

        </div>
    </div>

    <div id="carouselExampleControls" class="carousel slide" data-interval="false">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row">
                    <div class="col-4">
                        <img
                             src="https://ep01.epimg.net/elpais/imagenes/2019/10/30/album/1572424649_614672_1572453030_noticia_normal.jpg"
                             alt="First slide" height="300px" width="300px">
                    </div>
                    <div class="col-4">
                        <img  src="https://cdn.pixabay.com/photo/2015/04/23/22/00/tree-736885__340.jpg"
                             alt="Second slide" height="300px" width="300px">
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block" src="https://cdn.pixabay.com/photo/2015/04/23/22/00/tree-736885__340.jpg"
                     alt="Second slide" height="300px" width="300px">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100"
                     src="https://cdn.pixabay.com/photo/2015/10/12/14/59/milky-way-984050__480.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

{% endblock %}
